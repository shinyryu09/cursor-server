{
  "name": "mcp-cursor-server",
  "version": "2.0.1",
  "description": "MCP (Model Context Protocol) server for Xcode, Android Studio integration with Cursor Editor and multiple AI models",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node --max-old-space-size=4096 src/server.js",
    "dev": "nodemon --max-old-space-size=4096 src/server.js",
    "test": "node --test test/**/*.test.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "build": "echo \"No build process needed\"",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "version:show": "node -p \"require('./package.json').version\"",
    "git:push": "npm run version:patch && git add . && git commit -m \"v$(npm run version:show --silent): $(git log -1 --pretty=%B | head -1)\" && git push origin main",
    "git:push:minor": "npm run version:minor && git add . && git commit -m \"v$(npm run version:show --silent): $(git log -1 --pretty=%B | head -1)\" && git push origin main",
    "git:push:major": "npm run version:major && git add . && git commit -m \"v$(npm run version:show --silent): $(git log -1 --pretty=%B | head -1)\" && git push origin main",
    "changelog:generate": "node scripts/generate-changelog.js",
    "changelog:update": "echo \"⚠️  CHANGELOG.md와 VERSION_HISTORY.md를 수동으로 업데이트해주세요.\"",
    "version:info": "node scripts/version-info.js",
    "version:history": "npm run changelog:generate",
    "docs:version": "echo \"📝 버전별 수정사항 문서: CHANGELOG.md, VERSION_HISTORY.md\"",
    "release": "./scripts/release.sh --type patch",
    "release:minor": "./scripts/release.sh --type minor",
    "release:major": "./scripts/release.sh --type major",
    "release:tag": "./scripts/release.sh --type patch --message \"Release with tag\"",
    "release:tag:minor": "./scripts/release.sh --type minor --message \"Minor release with tag\"",
    "release:tag:major": "./scripts/release.sh --type major --message \"Major release with tag\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cursor",
    "xcode",
    "android-studio",
    "ai",
    "chatgpt",
    "gemini",
    "claude"
  ],
  "author": "kakaovx",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ws": "^8.18.3",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "openai": "^4.20.0",
    "@google/generative-ai": "^0.2.0",
    "@anthropic-ai/sdk": "^0.24.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
