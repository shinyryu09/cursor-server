{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Cursor Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "PORT": "3000"
            },
            "cwd": "${workspaceFolder}",
            "restart": true,
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Start Cursor Server (Production)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "production",
                "PORT": "3000"
            },
            "cwd": "${workspaceFolder}",
            "restart": false,
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}

